<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.macbook.calculatordemo.MainActivity">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@+id/et_input"
            android:layout_alignParentStart="true"
            android:layout_weight="1.0"
            >

            <Button
                android:layout_width="60dp"
                android:layout_height="75dp"
                android:text="清空"
                android:textSize="30sp"
                android:background="#ca8cf5"
                android:id="@+id/btn_clear"
                android:layout_weight="0.50" />

            <Button
                android:layout_width="60dp"
                android:layout_height="75dp"
                android:background="#ca8cf5"
                android:text="删除"
                android:textSize="30sp"
                android:id="@+id/btn_del"
                android:layout_weight="0.50" />
            <Button
                android:layout_width="59dp"
                android:layout_height="75dp"
                android:background="#ca8cf5"
                android:text="/"
                android:textSize="30sp"
                android:id="@+id/btn_divide"
                />

            <Button
                android:layout_width="59dp"
                android:layout_height="75dp"
                android:text="*"
                android:background="#ca8cf5"
                android:textSize="30sp"
                android:id="@+id/btn_multiply"
                />


        </LinearLayout>
        //第二行开始*******************************
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="95dp"
            android:orientation="horizontal"
            android:layout_below="@+id/et_input"
            android:layout_alignParentStart="true"
            android:layout_weight="1.0">

            <Button
                android:layout_width="60dp"
                android:layout_height="75dp"
                android:text="7"
                android:background="#b770e9"
                android:textSize="30sp"
                android:id="@+id/btn_7"
                android:layout_weight="0.50" />

            <Button
                android:layout_width="60dp"
                android:layout_height="75dp"
                android:text="8"
                android:textSize="30sp"
                android:background="#b770e9"
                android:id="@+id/btn_8"
                android:layout_weight="0.50" />

            <Button
                android:layout_width="59dp"
                android:layout_height="75dp"
                android:text="9"
                android:background="#b770e9"
                android:textSize="30sp"
                android:id="@+id/btn_9"
                />

            <Button
                android:layout_width="59dp"
                android:layout_height="75dp"
                android:text="-"
                android:background="#b770e9"
                android:textSize="30sp"
                android:id="@+id/btn_minus"
                />


        </LinearLayout>
        //第三行开始********************************
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="170dp"
            android:orientation="horizontal"
            android:layout_below="@+id/et_input"
            android:layout_alignParentStart="true"
            android:layout_weight="1.0">

            <Button
                android:layout_width="60dp"
                android:layout_height="75dp"
                android:text="4"
                android:background="#a052d7"
                android:textSize="30sp"
                android:id="@+id/btn_4"
                android:layout_weight="0.50" />

            <Button
                android:layout_width="60dp"
                android:layout_height="75dp"
                android:text="5"
                android:background="#a052d7"
                android:textSize="30sp"
                android:id="@+id/btn_5"
                android:layout_weight="0.50" />
            <Button
                android:layout_width="59dp"
                android:layout_height="75dp"
                android:text="6"
                android:background="#a052d7"
                android:textSize="30sp"
                android:id="@+id/btn_6"
                />

            <Button
                android:layout_width="59dp"
                android:layout_height="75dp"
                android:text="+"
                android:background="#a052d7"
                android:textSize="30sp"
                android:id="@+id/btn_pluse"
                />


        </LinearLayout>
        //第四行***************************************************************
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="245dp"
            android:orientation="horizontal"
            android:layout_below="@+id/et_input"
            android:layout_alignParentStart="true"
            android:layout_weight="1.0">

            <Button
                android:layout_width="60dp"
                android:layout_height="75dp"
                android:text="1"
                android:background="#9136d1"
                android:textSize="30sp"
                android:id="@+id/btn_1"
                android:layout_weight="0.50" />

            <Button
                android:layout_width="60dp"
                android:layout_height="75dp"
                android:text="2"
                android:background="#9136d1"
                android:textSize="30sp"
                android:id="@+id/btn_2"
                android:layout_weight="0.50" />
            <Button
                android:layout_width="59dp"
                android:layout_height="75dp"
                android:text="3"
                android:background="#9136d1"
                android:textSize="30sp"
                android:id="@+id/btn_3"
                />

            <Button
                android:layout_width="59dp"
                android:layout_height="75dp"
                android:text="0"
                android:background="#9136d1"
                android:textSize="30sp"
                android:id="@+id/btn_0"
                />
        </LinearLayout>
    //第五行***************************************************************
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="320dp"
        android:orientation="horizontal"
        android:layout_below="@+id/et_input"
        android:layout_weight="1.0"
        >

        <Button
            android:layout_width="105dp"
            android:layout_height="75dp"
            android:text="."
            android:background="#7616b9"
            android:textSize="50sp"
            android:id="@+id/btn_point"
            android:layout_weight="0.71" />

        <Button
            android:layout_width="230dp"
            android:layout_height="75dp"
            android:text="="
            android:background="#7616b9"
            android:textSize="50sp"
            android:id="@+id/btn_equal"
            android:layout_weight="0.24" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/et_input"
        android:editable="false"
        android:textSize="40sp"
        android:gravity="right|bottom"
        android:background="#e2bdfd"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
